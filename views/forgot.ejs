<% include ./partials/header %>

<main role="main">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-6">
                <form action="/forgot" method="POST">
                    <legend>Wachtwoord vergeten</legend>
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input type="email" name="email" autofocus class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Herstel Wachtwoord">
                        <a class="btn btn-danger float-right" href="/login">Annuleer</a>
                    </div>
                    <p>Na herstel Wachtwoord ontvangt u een mail met verdere instructies!</p>
                </form>
            </div>
        </div>
    </div>
</main>

<% include ./partials/footer %>